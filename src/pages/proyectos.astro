---
import global from "../styles/global.css";
import Layout from '../layouts/Layout.astro';

const title = "WinStar - Portafolio de Proyectos";
const description = "Descubre nuestra colección de proyectos innovadores en desarrollo web, aplicaciones móviles y soluciones tecnológicas empresariales. Cada proyecto refleja nuestro compromiso con la excelencia y la innovación.";
const image = "/src/assets/WinStarLogoWeb.png";
const keywords = "WinStar, proyectos, portafolio, desarrollo web, aplicaciones móviles, e-commerce, gestión, analytics, React, Flutter, Vue.js";
const author = "Samantha";

const projects = [
    {
        id: 1,
        title: "E-commerce Platform",
        description: "Desarrollo de una plataforma de comercio electrónico con funcionalidades avanzadas y diseño responsivo.",
        image: "https://via.placeholder.com/600x400", // Placeholder image
        tags: ["React", "Node.js", "MongoDB"],
        linkText: "Ver Proyecto",
        linkHref: "#"
    },
    {
        id: 2,
        title: "App de Gestión",
        description: "Aplicación móvil para la gestión de recursos y seguimiento de proyectos en tiempo real.",
        image: "https://via.placeholder.com/600x400", // Placeholder image
        tags: ["Flutter", "Firebase", "Dart"],
        linkText: "Ver Proyecto",
        linkHref: "#"
    },
    {
        id: 3,
        title: "Dashboard Analytics",
        description: "Panel de control interactivo para visualización y análisis de datos empresariales.",
        image: "https://via.placeholder.com/600x400", // Placeholder image
        tags: ["Vue.js", "D3.js", "Python"],
        linkText: "Ver Proyecto",
        linkHref: "#"
    },
    {
        id: 4,
        title: "Sistema de Reservas",
        description: "Un sistema de reservas online flexible y fácil de usar para negocios de servicios.",
        image: "https://via.placeholder.com/600x400", // Placeholder image
        tags: ["Angular", "Spring Boot", "MySQL"],
        linkText: "Ver Proyecto",
        linkHref: "#"
    }
];
---

<Layout 
    title={title}
    description={description}
    image={image}
    keywords={keywords}
    author={author}
>
    <div class="logo-container">
        <div class="name-container">
            <h1 class="stroke-text">PROYECTOS.</h1>
        </div>
    </div>
    <div class="header-line"></div>

    <div class="projects-container">
        {projects.map((project, index) => (
            <section class={`project-section ${index % 2 === 0 ? 'left-aligned' : 'right-aligned'}`}>
                <div class="project-content">
                    <h2>{project.title}</h2>
                    <p>{project.description}</p>
                    <div class="project-tags">
                        {project.tags.map(tag => <span>{tag}</span>)}
                    </div>
                    <a href={project.linkHref} class="project-link">{project.linkText}</a>
                </div>
                <div class="project-image">
                    <img src={project.image} alt={`Imagen de ${project.title}`}>
                </div>
            </section>
        ))}
    </div>
</Layout>

<style>
    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100%;
        margin: 0;
        padding: 0;
        position: relative;
        left: 0;
        right: 0;
        background: linear-gradient(45deg, 
            rgba(var(--color-text-muted-rgb), 0.6), 
            rgba(var(--color-primary-hover-rgb), 0.6), 
            rgba(var(--color-primary-rgb), 0.6));
        background-size: 400% 400%;
        animation: gradientBG 8s ease infinite;
        color: white;
    }

    @keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .name-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        position: relative;
        margin: 0;
        padding: 0;
    }

    .stroke-text {
        font-size: 6rem;
        font-weight: 900;
        -webkit-text-stroke: 3px var(--color-text);
        color: transparent;
        margin: 0;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        font-family: var(--font-family-header);
    }

    .projects-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .project-section {
        display: flex;
        align-items: center;
        margin-bottom: 4rem;
        padding: 2rem;
        background-color: var(--color-background);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex-wrap: wrap; /* Allow items to wrap on smaller screens */
    }

    .project-section:last-child {
        margin-bottom: 0;
    }

    .project-content {
        flex: 1;
        padding: 1.5rem;
    }

    .project-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .project-image img {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
    }

    .left-aligned .project-content {
        order: 1;
    }

    .left-aligned .project-image {
        order: 2;
    }

    .right-aligned .project-content {
        order: 2;
    }

    .right-aligned .project-image {
        order: 1;
    }

    .project-content h2 {
        color: #007bff;
        margin-bottom: 0.75rem;
        font-size: 2em;
    }

    .project-content p {
        color: #555;
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.1em;
    }

    .project-tags {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .project-tags span {
        background: #e9ecef;
        color: #495057;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.9em;
        font-weight: bold;
    }

    .project-link {
        display: inline-block;
        background-color: #007bff;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        transition: background-color 0.3s ease;
    }

    .project-link:hover {
        background-color: #0056b3;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .project-section {
            flex-direction: column;
        }

        .left-aligned .project-content,
        .left-aligned .project-image,
        .right-aligned .project-content,
        .right-aligned .project-image {
            order: 0; /* Reset order for small screens */
        }

        .project-content,
        .project-image {
            flex: none;
            width: 100%;
            padding: 1rem;
        }

        .project-image img {
            max-width: 100%;
        }

        .stroke-text {
            font-size: 4rem;
        }
    }

    .header-line {
        width: 100%;
        height: 2px;
        background: var(--color-text);
        margin: 2rem 0 4rem 0;
        position: relative;
        z-index: 2;
    }
</style> 